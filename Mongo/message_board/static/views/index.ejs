<body>
	<div style='margin-left: 30px; margin-right: 30px;'>
		<h1>The Dojo Message Board</h1>
		<hr>

		<form style='margin-left: 30px;' action='/create_message' method='post'>
		<label style='display: inline-block; width: 60px; margin-right: 10px; margin-bottom: 8px;'>Name: </label>
		<input type='text' name='name'><br>
		<label style='vertical-align: top; display: inline-block; width: 60px; margin-right: 10px; margin-bottom: 5px;'>Message: </label>
		<textarea style='text-align: auto; width: 800px; height: 150px' type='text' name='content'></textarea><br>
		<input style='margin-left: 785px; margin-top: 5px;' type='submit' name='submit'>
		</form>
	</div>

	<% for(message of messages) { %>
		<h2>Name: <%= message.name %></h2>
		<h2>Message: <%= message.content %></h2>
	<% } %>
</body>